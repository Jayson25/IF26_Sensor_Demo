<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/uttLogo"
            android:layout_width="120dp"
            android:layout_height="95dp"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="84dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="77dp" />

        <TextView
            android:id="@+id/accDataLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accelerometer"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.056" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <TextView
            android:id="@+id/lightDataLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="102dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/stepCounterDataLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stepcounter"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="102dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="357dp"
            android:layout_height="55dp"
            android:text="@string/shake_the_phone_for_a_suprise_please_do_not_abuse_during_the_presentation"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="375dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>